<idea-plugin>
    <id>project_manager</id>
    <name>project_manager</name>
    <version>1.0</version>
    <vendor email="497668869@qq.com" url="https://github.com/xin497668869"></vendor>

    <description>
        Fuzzy search project and switch project or open a project
        See the GitHub project in detail
        https://github.com/xin497668869/project_manager/blob/master/README.md
    </description>

    <change-notes>

    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <postStartupActivity implementation="com.xin.gotonewproject.MyStartupActivity"/>
    </extensions>

    <actions>


        <action id="focusEditor" class="com.xin.EditorFocusAction" text="focus in editor" description="编辑框焦点">
            <keyboard-shortcut keymap="$default" first-keystroke="control 0"/>
        </action>
        <action id="deleteFile" class="com.xin.DeleteFileAction" text="delete file" description="文件删除">
            <keyboard-shortcut keymap="$default" first-keystroke="control 0"/>
        </action>
        <action id="GotoProject" class="com.xin.gotoproject.GotoProjectAction" text="Switch Project" description="切换项目">
            <keyboard-shortcut keymap="$default" first-keystroke="shift control P"/>
        </action>
        <action id="GotoNewProject" class="com.xin.gotonewproject.GotoNewProjectAction" text="Open Project"
                description="打开项目">
            <keyboard-shortcut keymap="$default" first-keystroke="shift control O"/>
        </action>
        <action id="SearchProjectInfoAction" class="com.xin.gotonewproject.SearchProjectInfoAction"
                text="Edit And Search Workspaces" description="编辑并搜索项目路径">
        </action>

        <group popup="true" id="project_manager_group" text="Project Manager">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <reference ref="GotoProject"/>
            <reference ref="GotoNewProject"/>
            <reference ref="SearchProjectInfoAction"/>
        </group>
    </actions>

</idea-plugin>